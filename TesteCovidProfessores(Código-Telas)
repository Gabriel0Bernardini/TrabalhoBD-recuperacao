    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
            // TODO add your handling code here:
                Connection con = null;
    String url = "jdbc:postgresql://200.18.128.54/aula";
    String usuario = "aula";
    String senha = "aula";
    try{
      Class.forName("org.postgresql.Driver");
      con = DriverManager.getConnection(url, usuario, senha);
      System.out.println("Concexao estabelecida.");
      Statement stm = con.createStatement();

      stm.executeUpdate("Insert into gabriel_vaz.testes_profs(numero_teste, prof,pcr, febre, mascara, data_teste) values('"+txtIDTeste.getText()+"','"+txtIDProf.getText()+"','"+txtPCR.getText()+"','"+txtFebre.getText()+"','"+txtMascara.getText()+"','"+txtDataHora.getText()+"')");      
      con.close();
    }
    catch(Exception e){
      e.printStackTrace();
    }
    System.exit(0);
    
    
    }                                        

